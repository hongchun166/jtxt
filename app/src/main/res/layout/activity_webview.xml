<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515469"
    android:orientation="vertical">

    <TextView
        android:id="@+id/provider"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#c2c2c2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/provider"
        android:textColor="#c2c2c2"
        android:drawableLeft="@drawable/icon_chromium_warp"
        android:text="@string/label_browser_provider"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.linkb.jstx.component.ScrollableWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:scrollbars="none" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:id="@+id/background"
        android:layout_marginTop="@dimen/toolbar_height"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:background="#f8f8f8"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="16dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <View
                android:background="@drawable/gray_circle"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <View
                android:background="#f8f8f8"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="150dp"
                android:layout_width="match_parent"
                android:layout_height="14dp" />

        </LinearLayout>

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="8dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="8dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />


        <View
            android:background="#f8f8f8"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

        <View
            android:background="#f8f8f8"
            android:layout_marginTop="8dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="14dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3.0dip"
        android:layout_marginTop="?attr/actionBarSize"
        android:max="100"
        android:progressDrawable="@drawable/webview_progress" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_global_toolbar" />

</RelativeLayout>

