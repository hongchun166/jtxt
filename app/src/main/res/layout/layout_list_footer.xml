<?xml version="1.0" encoding="utf-8"?>


<com.linkb.jstx.component.ListFooterView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/footer_progressBar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/icon_coffee" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_list_loading"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/footer_hint"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:text="@string/tip_data_beall"
            android:textColor="@color/text_grey" />

        <View
            android:layout_toLeftOf="@id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:background="#aeaeae" />

        <View
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#aeaeae" />
    </RelativeLayout>


</com.linkb.jstx.component.ListFooterView>
