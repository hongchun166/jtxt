<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_global_toolbar" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:foreground="?selectableItemBackground"
            android:tag="normal"
            app:cardElevation="5dp"
            android:onClick="onThemeChanged"
            app:cardBackgroundColor="@color/colorToolbarNormal"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_normal"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:foreground="?selectableItemBackground"
            android:tag="red"
            app:cardElevation="5dp"
            android:onClick="onThemeChanged"
            app:cardBackgroundColor="@color/colorToolbarRed"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_red"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:onClick="onThemeChanged"
            android:foreground="?selectableItemBackground"
            android:tag="blue"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorToolbarBlue"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_blue"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="onThemeChanged"
            android:foreground="?selectableItemBackground"
            android:tag="green"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorToolbarGreen"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_green"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="onThemeChanged"
            android:foreground="?selectableItemBackground"
            android:tag="purple"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorToolbarPurple"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_purple"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="onThemeChanged"
            android:foreground="?selectableItemBackground"
            android:tag="teal"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/colorToolbarTeal"
            app:layout_columnWeight="1">

            <ImageView
                app:srcCompat="@drawable/icon_angle_mark"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:text="@string/theme_teal"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.GridLayout>


</LinearLayout>