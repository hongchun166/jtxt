<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_trend_top_bg_v2"
    android:paddingLeft="29dp"
    >
    <TextView
        android:id="@+id/tvTrendTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:textSize="@dimen/text_30sp"
        android:textColor="@color/tex_color_white"
        android:text="@string/platform_describe4"
        />
    <TextView
        android:id="@+id/tvTrendTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTrendTop1"
        android:textSize="@dimen/text_15sp"
        android:textColor="@color/tex_color_white"
        android:text="@string/platform_describe_en4"
        />
    <TextView
        android:id="@+id/tvTrendTop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTrendTop2"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/tex_color_white"
        android:text="@string/platform_describe3"
        />
    <TextView
        android:id="@+id/tvTrendTop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTrendTop3"
        android:textSize="@dimen/text_13sp"
        android:textColor="@color/tex_color_white"
        android:text="@string/platform_describe_en3"
        />
</RelativeLayout>