<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:background="@android:color/white">


    <android.support.constraint.Guideline
        android:id="@+id/guideline19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/textView145"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="社交巨头啥都看了圣诞节拉倒就拉上蝶恋蜂狂木没地方是的发快递看了佛，按时付款"
        android:textColor="@color/tex_color_gray_191919"
        android:textSize="@dimen/text_title"
        app:layout_constraintEnd_toStartOf="@+id/imageView41"
        app:layout_constraintStart_toStartOf="@+id/guideline26"
        app:layout_constraintTop_toTopOf="@+id/imageView41" />

    <com.linkb.jstx.component.WebImageView
        android:id="@+id/imageView41"
        android:layout_width="108dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_detailed_banner"
        android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView41"
        app:layout_constraintStart_toStartOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/imageView41"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView146"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tex_color_gray_999999"
            android:textSize="@dimen/text_content"
            android:text="火星财经"
            />
        <TextView
            android:id="@+id/textView147"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tex_color_gray_999999"
            android:textSize="@dimen/text_content"
            android:text=" · "
            android:layout_toRightOf="@+id/textView146"
            />

        <TextView
            android:id="@+id/textView148"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tex_color_gray_999999"
            android:textSize="@dimen/text_content"
            android:text="15分钟前"
            android:layout_toRightOf="@+id/textView147"
            />


        <ImageView
            android:id="@+id/viewGetRedBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content"
            android:text=""
            android:textColor="@color/background_yellow_FF8A3B"
            android:src="@mipmap/ic_news_redpackger"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_color_gray_ebebeb"
        app:layout_constraintStart_toStartOf="@+id/guideline26"
        app:layout_constraintEnd_toStartOf="@+id/guideline19"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>