<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardElevation="10dp"

    >

    <android.support.constraint.ConstraintLayout


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/popup_window"


        >

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/create_group_cly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="30dp"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/create_group_imageView"
                android:layout_width="@dimen/popup_window_icon_size"
                android:layout_height="@dimen/popup_window_icon_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/cjqz" />

            <TextView
                android:id="@+id/create_group_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/start_group_chat"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/create_group_imageView"
                app:layout_constraintStart_toEndOf="@+id/create_group_imageView"
                app:layout_constraintTop_toTopOf="@+id/create_group_imageView" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/add_friends_cly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="30dp"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_group_cly">

            <ImageView
                android:id="@+id/add_friends_imageView"
                android:layout_width="@dimen/popup_window_icon_size"
                android:layout_height="@dimen/popup_window_icon_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/tjhy" />

            <TextView
                android:id="@+id/add_friends_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/add_friends"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/add_friends_imageView"
                app:layout_constraintStart_toEndOf="@+id/add_friends_imageView"
                app:layout_constraintTop_toTopOf="@+id/add_friends_imageView" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mine_wallet_cly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingEnd="30dp"
            android:paddingTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_friends_cly">


            <ImageView
                android:id="@+id/mine_wallet_imageView"
                android:layout_width="@dimen/popup_window_icon_size"
                android:layout_height="@dimen/popup_window_icon_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/qb" />

            <TextView
                android:id="@+id/mine_wallet_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/mine_wallet"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mine_wallet_imageView"
                app:layout_constraintStart_toEndOf="@+id/mine_wallet_imageView"
                app:layout_constraintTop_toTopOf="@+id/mine_wallet_imageView" />
        </android.support.constraint.ConstraintLayout>



        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/qr_scan_cly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="30dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mine_wallet_cly">


            <ImageView
                android:id="@+id/qr_scan_imageView"
                android:layout_width="@dimen/popup_window_icon_size"
                android:layout_height="@dimen/popup_window_icon_size"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/sys"
                tools:layout_editor_absoluteY="20dp" />

            <TextView
                android:id="@+id/qr_scan_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/scan"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/qr_scan_imageView"
                app:layout_constraintStart_toEndOf="@+id/qr_scan_imageView"
                app:layout_constraintTop_toTopOf="@+id/qr_scan_imageView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
