<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/background_white_to_gray"
    android:id="@+id/viewRoot"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >

    <com.linkb.jstx.component.WebImageView
        android:id="@+id/viewHead"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/viewCenter1"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/viewHead" />

    <TextView
        android:id="@+id/viewGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewCenter1"
        android:layout_toRightOf="@+id/viewCenter1"
        android:text=""
        android:textColor="@color/tex_color_gray_333"
        android:textSize="@dimen/text_14sp" />

    <TextView
        android:id="@+id/viewGroupDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewGroupName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/viewCenter1"
        android:text=""
        android:textColor="@color/tex_color_gray_999999"
        android:textSize="@dimen/text_12sp" />

    <Button
        android:id="@+id/viewApplyJoinGroup"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/viewCenter1"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_group_hot_search_flow_item"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/join"
        android:textColor="@color/tex_color_gray_333"
        android:textSize="@dimen/text_12sp" />
</RelativeLayout>