<?xml version="1.0" encoding="utf-8"?>
<com.linkb.jstx.component.MicroServerFromTextView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

    <com.linkb.jstx.component.WebImageView
        android:id="@+id/logo"
        android:layout_width="40dip"
        android:layout_marginLeft="5dp"
        android:layout_height="40dip"
        android:background="@drawable/item_background_single"
        android:padding="1dp"
        app:srcCompat="@drawable/icon_def_head" />


    <com.linkb.jstx.component.EmoticonTextView
        android:id="@+id/textview"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/logo"
        android:background="@drawable/chating_background_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:autoLink="web|phone|email"
        android:linksClickable="true"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/text_chat_from_color"
        android:textSize="@dimen/chating_text_size" />

</com.linkb.jstx.component.MicroServerFromTextView>