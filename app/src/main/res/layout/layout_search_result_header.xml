<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="103dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_group_id"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/item_background_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dip">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            app:srcCompat="@drawable/icon_contacts_group" />

        <TextView
            android:id="@+id/label_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/theme_text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_micro_server"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/item_background_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dip">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            app:srcCompat="@drawable/icon_microserver" />

        <TextView
            android:id="@+id/label_micro_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/theme_text_color" />
    </LinearLayout>

    <View
        android:background="@drawable/title_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
</LinearLayout>

