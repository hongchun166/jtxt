<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/container"
        android:id="@+id/read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_status_already_read"
        android:gravity="center"
        android:layout_gravity="center_vertical|right"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:layout_marginRight="-70dp"
        android:paddingRight="5dip"
        android:paddingTop="2dip"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:visibility="invisible" />

    <ImageView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/container"
        android:layout_gravity="center_vertical|right"
        android:id="@+id/icon_resend"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_marginRight="-70dp"
        app:srcCompat="@drawable/chat_msg_resend_button"
        android:visibility="invisible" />

    <ProgressBar
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/container"
        android:layout_marginRight="-70dp"
        android:layout_gravity="center_vertical|right"
        android:id="@+id/sendProgressbar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content" />

</merge>