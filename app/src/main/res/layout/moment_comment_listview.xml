<?xml version="1.0" encoding="utf-8"?>
<com.linkb.jstx.component.CommentListView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/commentListView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/time"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@id/icon"
                                        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_comment_triangle" />


    <RelativeLayout
        android:id="@+id/praisePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/comment_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/praiseicon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            app:srcCompat="@drawable/icon_moment_praise_hover" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/praiseicon"
            android:columnCount="8" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/gridLayout"
            android:background="?android:listDivider" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/commentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</com.linkb.jstx.component.CommentListView>
