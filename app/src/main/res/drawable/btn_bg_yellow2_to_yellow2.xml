<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_yellow_FFBB29" />
            <solid android:color="@color/background_yellow_FFBB29"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item  android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/tex_color_gray_666" />
            <solid android:color="@color/tex_color_gray_666"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_yellow_FF8A3B" />
            <solid android:color="@color/background_yellow_FF8A3B"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>