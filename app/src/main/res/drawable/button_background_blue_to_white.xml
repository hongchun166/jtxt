<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_992D76E3" />
            <solid android:color="@color/background_blue_992D76E3" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_E1E8F0" />
            <solid android:color="@color/background_blue_E1E8F0" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_2D76E3" />
            <solid android:color="@color/background_blue_2D76E3" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_2D76E3" />
            <solid android:color="@color/background_blue_2D76E3" />
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>