<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@android:color/white" />
            <solid android:color="@android:color/white"/>
            <padding android:left="10dp" android:top="2dp"
                android:right="10dp" android:bottom="2dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item  android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_E1E8F0" />
            <solid android:color="@color/background_blue_E1E8F0"/>
            <padding android:left="10dp" android:top="2dp"
                android:right="10dp" android:bottom="2dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_2D76E3" />
            <solid android:color="@color/background_blue_2D76E3"/>
            <padding android:left="10dp" android:top="2dp"
                android:right="10dp" android:bottom="2dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>