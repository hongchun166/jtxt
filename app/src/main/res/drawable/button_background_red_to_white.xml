<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@android:color/white" />
            <solid android:color="@android:color/white"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_red_F25F4F" />
            <solid android:color="@color/background_red_F25F4F"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_red_D63337" />
            <solid android:color="@color/background_red_D63337"/>
            <padding android:left="8dp" android:top="8dp"
                android:right="8dp" android:bottom="8dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>