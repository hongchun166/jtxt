<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_red_F25F4F" />
            <solid android:color="@android:color/white"/>
            <padding android:left="8dp" android:top="6dp"
                android:right="8dp" android:bottom="6dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/color_F5F6FA" />
            <solid android:color="@color/color_F5F6FA"/>
            <padding android:left="8dp" android:top="6dp"
                android:right="8dp" android:bottom="6dp" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</selector>