<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/divider_color_gray_999999" />
            <solid android:color="@color/divider_color_gray_999999"/>
            <padding android:left="10dp" android:top="3dp"
                android:right="10dp" android:bottom="3dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/divider_color_gray_999999" />
            <solid android:color="@android:color/white"/>
            <padding android:left="8dp" android:top="3dp"
                android:right="8dp" android:bottom="3dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>