<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_1068ed" />
            <solid android:color="@color/background_blue_1068ed"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item  android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_1068ed" />
            <solid android:color="@color/background_blue_1068ed"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_blue_2D76E3" />
            <solid android:color="@color/background_blue_2D76E3"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>