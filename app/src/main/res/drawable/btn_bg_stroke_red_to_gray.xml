<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_yellow_FF8A3B" />
            <solid android:color="@android:color/white"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/background_red_D63337" />
            <solid android:color="@color/tex_color_gray_999999"/>
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>