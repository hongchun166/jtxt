<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_mediumAnimTime" xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="25dp" android:topLeftRadius="25dp"/>
            <solid android:color="#CCCCCC" />
            <stroke android:width="1px" android:color="#919191" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="25dp" android:topLeftRadius="25dp"/>
            <solid android:color="#FFFFFF" />
            <stroke android:width="1px" android:color="#bcbcbc" />
        </shape>
    </item>
</selector>