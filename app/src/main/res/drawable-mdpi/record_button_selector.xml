<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_mediumAnimTime" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#dcdcdc" />
            <stroke android:width="0.7dp" android:color="#c4c4c4" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#dcdcdc" />
            <stroke android:width="0.7dp" android:color="#c4c4c4" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <solid android:color="#f5f5f5" />
            <stroke android:width="0.7dp" android:color="#cfcfcf" />
        </shape>
    </item>
</selector>
